        <div class="card-header py-3 d-flex flex-row align-items-center ">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between col-md-3">
                <h6 class="m-0 font-weight-bold text-primary"> Vehicle list</h6>
            </div>
            <div class="card-header py-2 d-flex flex-row align-items-center justify-content-end col-md-9">
                <button type="button" class="btn btn-sm btn-success" style="float:right" title="export">
                    <a href="~/Vehicles/Vehiclesexport" style="color:white">
                        Export &nbsp;
                    </a>
                    <span class="fa fa-file-export"></span>
                </button> &nbsp;&nbsp;&nbsp;
                <button type="button" class="btn btn-sm btn-success" style="float:right" title="Add size"
                        data-toggle="modal" data-target="#employeeFormModal">
                    Add Vehicle &nbsp;
                    <span class="fa fa-plus"></span>
                </button> &nbsp;&nbsp;&nbsp;
                <button type="button" class="btn btn-sm btn-danger deletesel" aria-label="Delete" title="Delete" data-toggle="modal" data-target="#modalPopup">
                    Delete &nbsp;
                    <span class="fa fa-trash-alt" aria-hidden="true"></span>
                </button>

            </div>

        </div>
        <div class="card-body">
            <div class="table-responsive employeeTable">
                <table id="employeeTable" class="table table-bordered" width="100%" cellspacing="0">
                    <thead>

                        <tr>
                            <th><input type="checkbox" name="select_all" value="1" id="example-select-all"></th>
                            <th>Date</th>
                            <th>Vehicle type</th>
                            <th>Vehicle make</th>

                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="employeeFormModal" tabindex="-1" role="dialog" aria-labelledby="employeeFormModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="width:600px;">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Add vehicle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            </div>
            <div class="modal-body container-fluid">
                <div class="row">
                    <form id="employeeForm" name="employeeForm" style="width:600px;">
                        <input type="hidden" id="Token_number" name="Token_number" />

                        <div class="form-group col-xs-10 col-sm-10 col-md-10 col-lg-10">
                            <label for="message-text" class="control-label">Vehicle type:</label>
                            @Html.DropDownListFor(model => model.Vehicle_type, new List<SelectListItem>
                       { new SelectListItem { Value = "2 wheeler" , Text = "2 wheeler" },
                         new SelectListItem { Value = "3 wheeler" , Text = "3 wheeler" },
                       new SelectListItem { Value = "4 wheeler" , Text = "4 wheeler" },
                       new SelectListItem { Value = "5 wheeler" , Text = "5 wheeler" },
                       new SelectListItem { Value = "6 wheeler" , Text = "6 wheeler" },
                       new SelectListItem { Value = "7 wheeler" , Text = "7 wheeler" },
                       new SelectListItem { Value = "8 wheeler" , Text = "8 wheeler" },
                       new SelectListItem { Value = "9 wheeler" , Text = "9 wheeler" },
                       new SelectListItem { Value = "10 wheeler" , Text = "10 wheeler" },
                       new SelectListItem { Value = "11 wheeler" , Text = "11 wheeler" },
                       new SelectListItem { Value = "12 wheeler" , Text = "12 wheeler" },
                       new SelectListItem { Value = "13 wheeler" , Text = "13 wheeler" },
                       new SelectListItem { Value = "14 wheeler" , Text = "14 wheeler" },
                       new SelectListItem { Value = "15 wheeler" , Text = "15 wheeler" },
                       new SelectListItem { Value = "16 wheeler" , Text = "16 wheeler" },
                       new SelectListItem { Value = "17 wheeler" , Text = "17 wheeler" },
                       new SelectListItem { Value = "18 wheeler" , Text = "18 wheeler" },
                       new SelectListItem { Value = "19 wheeler" , Text = "19 wheeler" },
                       new SelectListItem { Value = "20 wheeler" , Text = "20 wheeler" },},
                                                  "Select tyre type", new {  @class="form-control form-control-sm", @style="width:80%" , @id = "Vehicle_type", @name = "Vehicle_type" })
                            @*<input type="text" class="form-control form-control-sm" style="width:80%" id="Vehicle_type" name="Vehicle_type" />*@
                        </div>
                        <div class="form-group col-xs-10 col-sm-10 col-md-10 col-lg-10">
                            <label for="message-text" class="control-label">Vehicle make:</label>
                            <input type="text" class="form-control form-control-sm" style="width:80%" id="Vehicle_make" name="Vehicle_make" />
                        </div>

                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <div class="alert alert-success pull-left no-margin" role="alert" style="display:none">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <strong>Created!</strong> Vehicle created successfully.
                </div>
                <div class="alertnotsaved alert-danger pull-left no-margin" role="alert" style="display:none">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <strong>Not created!</strong> Vehicle is not created.

                </div>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="employeeFormSubmit">Save</button>
            </div>
        </div>
    </div>
</div>
<div id="confirmEmployeeDeleteModal" class="modal fade">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <input type="hidden" name="Token_number" class="Token_number" />
            <div class="modal-body">
                Are you sure?
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-danger" id="deleteEmployee">Delete</button>
                <button type="button" data-dismiss="modal" class="btn">Cancel</button>
            </div>
        </div>
    </div>
</div>
<div id="modaltest" class="modal fade">
    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
        <div class="modal-content">
            <img id="image" src="~/Images/Alert-Logo.jpg" />
            <div class="modal-body msg" style="border:none; text-align:center;">

            </div>
            <div class="modal-footer" style="border:none">
                <button type="button" data-dismiss="modal" class="btn btn-sm btn-info">Ok</button>

            </div>
        </div>
    </div>
</div>
<div id="modalPopup" class="modal fade">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <input type="hidden" name="Token_Number" class="Token_Number" />
            <div class="modal-body">
                Are you sure?
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-danger deletesel" id="deletesel">Delete</button>
                <button type="button" data-dismiss="modal" class="btn">Cancel</button>
            </div>
        </div>
    </div>
</div>
